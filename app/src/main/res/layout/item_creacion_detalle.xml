<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <TextView
        android:id="@+id/tvHoraInicio"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/tvHoraFin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTrabajo"
        android:layout_width="57dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/tvDescripcion"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCDEliminar"
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#BA0909"
        android:text="@string/btnCDEliminar"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHoraFin"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/tvTrabajo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/btnCDEditar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCDEditar"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#BA0909"
        android:text="@string/btnCDEditar"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btnCDEliminar"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>